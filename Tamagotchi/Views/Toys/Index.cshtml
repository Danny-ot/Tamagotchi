<!DOCTYPE html>
<html>

<head>
    <title>Tamagotchi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body class="bg-dark text-white">
    @using Tamagotchi.Models;
    <h1 class="text-center">Tamagotchis</h1>
    <div class="container mt-5">
        @if (Model.Count == 0)
        {
            <p class="text-center h5">There are no Tamagotchi's Available</p>
        }
        else
        {
            <div class="row justify-content-around">
                @foreach(Toy tamagotchi in Model)
                {
                    if(tamagotchi.IsAlive())
                    {
                            <div class="col-md-4 bg-secondary p-4 text-center">
                                <h1>@tamagotchi.Name</h1>
                                <p class="h5 mt-3">FoodLevel - @tamagotchi.FoodAmount</p>
                                <p class="h5">RestLevel - @tamagotchi.RestAmount</p>
                                <p class="h5">HappinessLevel - @tamagotchi.HappinessAmount</p>
                                <div class="text-center">
                                    <a href="/tamagotchi/@tamagotchi.Id" class="btn btn-primary">Attend To</a>
                                </div>
                            </div>
                    }
                    else
                    {
                        <p class = "h5 text-danger">@tamagotchi.Name is dead</p>
                    }
                }
            </div>

        }
        <p class="text-center h6 mt-3"><a href="/tamagotchi/new">Add New Tamagotchi</a></p>
    </div>
</body>

</html>